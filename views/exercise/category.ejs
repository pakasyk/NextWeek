                </li>
    
            </ul>
    <a href="/exercises">Back to Exercises</a>
    <div>
        <form action="/exercises/categories" method="post">
            <label for="name">Category</label>
            <input type="text" placeholder="Category" name="name">
            <button type="submit">Submit</button>
        </form>
    </div>
    <div>
        <% if(Object.keys(categoryList).length){ %>
        <ul>
            <% for(let i = 0; i < categoryList.length; ++i){ %>
            <li>
                <%= categoryList[i].name %>
            </li>
            <% } %>
        </ul>
        <% }else { %>
        <p>No category found.</p>

        <% } %>
    </div>

</body>

